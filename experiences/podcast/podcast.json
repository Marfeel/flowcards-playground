{
  "cards": {
    "podcast": {
      "content": {
        "type": "AMPDocument",
        "url": "${PLAYGROUND_PROXY}/${CURRENT_HOSTNAME}/experiences/podcast/podcast.html"
      },
      "features": {
        "button": {
          "action": "setSnapPoint:initial"
        },
        "mode": "modal"
      },
      "snapPoints": {
        "active": {
          "interactive": true,
          "value": 80
        },
        "initial": {
          "interactive": true,
          "value": 0.73
        },
        "minimised": {
          "interactive": true,
          "value": 0.82
        }
      },
      "triggers": {
        "myScrollTrigger": {
          "on": "scroll",
          "action": "setSnapPoint:initial",
          "spec": {
            "percentage": 0.1,
            "pixel": 300,
            "type": "absolute"
          }
        }
      }
    }
  }
}
